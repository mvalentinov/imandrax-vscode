{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "outDir": "src/out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "imlformat/tsconfig.json"
    }
  ]
}